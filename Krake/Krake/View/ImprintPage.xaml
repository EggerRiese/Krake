             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Krake.View.ImprintPage"
             BackgroundImageSource="{StaticResource Key=background}"
             Title="Impressum">
